<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/relativeLayout"
    android:background="#ffffff">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etComic"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Enter Comic Name"
        android:textAlignment="center"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:imeOptions="actionDone"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/saveBtn"
        android:layout_below="@+id/etComic"
        android:layout_centerHorizontal="true"
        android:onClick="saveBtn"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Number of Items"
        android:id="@+id/numberOfItemsLabel"
        android:layout_alignTop="@+id/numOfItems"
        android:layout_alignRight="@+id/saveBtn"
        android:layout_alignEnd="@+id/saveBtn" />

    <TextView
        android:layout_width="81dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:textAlignment="center"
        android:textSize="24sp"
        android:id="@+id/numOfItems"
        android:layout_marginTop="87dp"
        android:layout_below="@+id/saveBtn"
        android:layout_toRightOf="@+id/numberOfItemsLabel"
        android:layout_alignRight="@+id/etComic"
        android:layout_alignEnd="@+id/etComic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Average Length"
        android:id="@+id/lengthLabel"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/numberOfItemsLabel"
        android:layout_alignStart="@+id/numberOfItemsLabel"
        android:layout_alignRight="@+id/numberOfItemsLabel"
        android:layout_alignEnd="@+id/numberOfItemsLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/aveLength"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/lengthLabel"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_alignRight="@+id/numOfItems"
        android:layout_alignEnd="@+id/numOfItems" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Index"
        android:id="@+id/indexBtn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:nestedScrollingEnabled="false"
        android:onClick="indexButton"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etIndex"
        android:layout_above="@+id/indexBtn"
        android:layout_centerHorizontal="true"
        android:hint="Enter Index Number"
        android:textAlignment="center"
        android:inputType="number"
        android:focusable="true"
        android:focusableInTouchMode="true"/>

</RelativeLayout>
